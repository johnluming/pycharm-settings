      <option name="COMMAND" value="&quot;C:\Program Files\GNU Emacs\bin\emacsclientw.exe&quot; +$LineNumber$:$ColumnNumber$ &quot;$FilePath$&quot;" />
      <option name="PARAMETERS" />
      <option name="WORKING_DIRECTORY" value="$FileDir$" />
    </exec>
  </tool>
  <tool name="open in emacs test" showInMainMenu="false" showInEditor="false" showInProject="false" showInSearchPopup="false" disabled="false" useConsole="false" showConsoleOnStdOut="false" showConsoleOnStdErr="false" synchronizeAfterRun="true">
