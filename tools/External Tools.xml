      <option name="COMMAND" value="&quot;C:\Program Files\GNU Emacs\bin\emacsclientw.exe&quot;  -e   &quot;(progn          (find-file &quot;&quot;$FilePath$&quot;&quot;)         (auto-revert-mode t)        )&quot;" />
      <option name="PARAMETERS" />
      <option name="WORKING_DIRECTORY" value="$ProjectFileDir$" />
    </exec>
  </tool>
</toolSet>